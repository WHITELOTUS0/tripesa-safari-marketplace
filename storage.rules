rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Admin users can upload and manage their own files
    match /admin/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
    
    // Site assets (banners, images) - only authenticated admin users can manage
    match /site-assets/{allPaths=**} {
      allow read: if true; // Public read access for site assets
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/admin-users/$(request.auth.uid)).data.isActive == true;
    }
    
    // Public assets - anyone can read, only admins can write
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
        firestore.get(/databases/(default)/documents/admin-users/$(request.auth.uid)).data.isActive == true;
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 